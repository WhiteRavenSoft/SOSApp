@{
    ViewBag.Title = "Noticias";
    ViewBag.SectionName = "News";

    Layout = "~/Views/Shared/_Layout.cshtml";

}

<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">Noticias</h1>
    </div>
    <!-- /.col-lg-12 -->
</div>
<!-- /.row -->
<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                <div class="text-right">
                    <a href="/News/Create" type="button" class="btn btn-info btn-circle" alt="Nuevo"><i class="fa fa-plus"></i></a>
                    @*<a href="#" type="button" class="btn btn-success btn-circle" alt="Descargar Excel"><i class="fa fa-file-excel-o"></i></a>
                        <a href="#" type="button" class="btn btn-danger btn-circle" alt="Descargar PDF"><i class="fa fa-file-pdf-o"></i></a>*@
                </div>
            </div>
            <!-- /.panel-heading -->
            <div class="panel-body">
                <div class="dataTable_wrapper">
                    <table class="table table-striped table-bordered table-hover" id="table-noticias">
                        <thead>
                            <tr>
                                <th>Título</th>
                                <th>Copete</th>
                                <th>Fecha</th>
                                <th>Activo</th>
                            </tr>
                        </thead>
                        <tbody></tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

@section scripts
{
    <script src="~/Scripts/dataTables/jquery.dataTables.min.js"></script>
    <script src="~/Scripts/dataTables/dataTables.bootstrap.js"></script>
    <script src="~/Scripts/DataTables/dataTables.responsive.min.js"></script>
    <script src="~/Scripts/moment.js"></script>
    <script>
        $(document).ready(function () {
            $('#table-noticias').DataTable({
                ajax: ApiUrl + 'news',
                columnDefs: [
                    { width: 300, targets: 0 }
                ],
                fixedColumns: true,
                autoWidth: false,
                displayLength: 50,
                order: [[2, "desc"]],
                columns: [
                    { data: 'Title' },
                    { data: 'Important' },
                    {
                        data: 'Date',
                        render: function (data, type, row) {
                            if (type === "sort" || type === "type") {
                                return data;
                            }
                            return moment(data).format("DD/MM/YYYY");
                        }
                    },
                    {
                        data: 'Active',
                        "render": function (data, type, row) {
                            if (data === true) {
                                return '<div style="width:100%;text-align:center;"><img src="../Content/Images/Icons/checkbox.png" /></div>';
                            }
                            else {
                                return '<div style="width:100%;text-align:center;"><img src="../Content/Images/Icons/uncheckbox.png" /></div>';
                            }
                        },
                        searchable: false,
                        orderable: false
                    }
                ],
                responsive: true
            });

            var table = $('#table-noticias').DataTable();

            $('#table-noticias tbody').on('click', 'tr', function () {
                var data = table.row(this).data();

                window.location.assign('/News/Edit/' + data.ID);
            });

            //Agrega cursor pointer a la tabla
            $("#table-noticias tbody").css('cursor', 'pointer');
        });
    </script>
}
