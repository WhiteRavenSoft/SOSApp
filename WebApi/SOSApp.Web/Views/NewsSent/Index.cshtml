
@{
    ViewBag.Title = "Noticias enviadas";
    ViewBag.SectionName = "NewsSent";

    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">Noticias Enviadas</h1>
    </div>
    <!-- /.col-lg-12 -->
</div>
<!-- /.row -->
<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <!-- /.panel-heading -->
            <div class="panel-body">
                <div class="dataTable_wrapper">
                    <table class="table table-striped table-bordered table-hover" id="table-noticias">
                        <thead>
                            <tr>
                                <th>Título</th>
                                <th>Región</th>
                                <th>Fecha de Envío</th>
                            </tr>
                        </thead>
                        <tbody></tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

@section scripts
{
    <script src="~/Scripts/dataTables/jquery.dataTables.min.js"></script>
    <script src="~/Scripts/dataTables/dataTables.bootstrap.js"></script>
    <script src="~/Scripts/DataTables/dataTables.responsive.min.js"></script>
    <script src="~/Scripts/moment.js"></script>
    <script>
        $(document).ready(function () {
            $('#table-noticias').DataTable({
                ajax: ApiUrl + 'newssent',
                autoWidth: false,
                displayLength: 50,
                order: [[2, "desc"]],
                columns: [
                    { data: 'NewsTitle' },
                    { data: 'UserGroupName' },
                    {
                        data: 'SentDate',
                        render: function (data, type, row) {
                            if (type === "sort" || type === "type") {
                                return data;
                            }
                            return moment(data).format("DD/MM/YYYY HH:mm:ss");
                        }
                    },
                ],
                responsive: true
            });

            var table = $('#table-noticias').DataTable();
        });
    </script>
}
