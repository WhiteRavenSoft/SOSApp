                                        TextColor="Black"/>
                                    <Label  x:Name="lblTitulo"
                                        FontSize="Large"
                                        TextColor="Purple"
                                        FontAttributes="Bold"/>
                                    <Label  x:Name="lblCopete"
                                        FontSize="Default"
                                        TextColor="Black"
                                        HorizontalOptions="FillAndExpand"/>
                                    <BoxView
                                        HeightRequest="1"
                                        HorizontalOptions="Fill"
                                        Color="Black"/>
                                    <Label  x:Name="lblContenido"
                                        FontSize="Medium"
                                        TextColor="Black"
                                        HorizontalOptions="FillAndExpand"/>
                                </StackLayout>
                            </ContentView>
                        </parallax:ParallaxView.BodyContent>
