                </Image>
                <Image 
                    Grid.Row="3"
                    Source="buttons/infoutil.png"
                    Aspect="AspectFit" >
                    <Image.GestureRecognizers>
                        <TapGestureRecognizer Tapped="OnTapShowInfoUtil" />
                    </Image.GestureRecognizers>
                </Image>
                <Image 
                    Grid.Row="4"
                    Source="buttons/dondellevo.png" 
                    Aspect="AspectFit">
                    <Image.GestureRecognizers>
                        <TapGestureRecognizer Tapped="OnTapShowDondeLLevo" />
                    </Image.GestureRecognizers>
                </Image>
            </Grid>
